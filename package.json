{
	"name": "github-stats-mcp",
	"version": "1.0.0",
	"description": "MCP server for retrieving GitHub repository statistics",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "tsc && node dist/index.js",
		"test": "echo \"Error: no test specified\" && exit 1",
		"docker:build": "./scripts/build-docker.sh",
		"docker:logs": "docker logs -f github-stats-mcp-server",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"check": "biome check --write .",
		"ci": "biome ci ."
	},
	"keywords": [
		"mcp",
		"github",
		"statistics",
		"model-context-protocol"
	],
	"author": "",
	"license": "Apache-2.0",
	"packageManager": "pnpm@10.13.1",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.0",
		"@octokit/rest": "^20.0.2",
		"@octokit/types": "^14.1.0",
		"node-fetch": "^3.3.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/node": "^20.10.0",
		"typescript": "^5.3.0"
	}
}
